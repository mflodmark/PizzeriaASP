
@model List<PizzeriaASP.Models.Produkt>

@{
    ViewData["Title"] = "All products";
}

<div class="div-min-block">
    <table class="table table-striped, table-bordered table-sm">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th class="text-center">Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProduktId</td>
                <td>@item.ProduktNamn</td>
                <td class="text-center">
                    <form asp-controller="AdminIngredients" asp-action="DeleteIngredient" asp-route-id="@item.ProduktId" method="post">
                        <a asp-action="EditOrAddIngredient" asp-route-id="@item.ProduktId" class="btn btn-sm btn-warning">
                            <i class="icon-edit"></i> Edit
                        </a>
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="icon-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <div class="text-center div-clear-left">
        <a asp-action="AddIngredient" class="btn btn-primary">Add Product</a>
    </div>
</div>
