
@model PizzeriaASP.ViewModels.CategoryViewModel

<div class="btn btn-group-vertical">
    
    <a class="btn @("Home" == @Model.CurrentCategory ? "btn-primary" : "btn-secondary")"
       asp-controller="Product" asp-action="List" asp-route-category="">
        Home
    </a>


    @foreach (string category in Model.Category)
    {
        <a class="btn @(category == @Model.CurrentCategory ? "btn-primary" : "btn-secondary")"
           asp-controller="Product" asp-action="List" asp-route-category="@category"
           asp-route-productPage="1">
            @category
        </a>
    }
</div>
