@model PizzeriaASP.ViewModels.ProductsListViewModel

@{
    ViewData["Title"] = "All products";
}

<table class="table table-striped, table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-right">Price</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model.Products)
    {
        <tr>
            <td class="text-right">@item.MatrattId</td>
            <td>@item.MatrattNamn</td>
            <td class="text-right">@item.Pris.ToString("c")</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning"
                       asp-route-productId="@item.MatrattId">
                        Edit
                    </a>
                    <input type="hidden" name="productId" value="@item.MatrattId"/>
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Product</a>
</div>
