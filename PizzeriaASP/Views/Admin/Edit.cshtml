@model PizzeriaASP.Models.Matratt

@{
    ViewData["Title"] = "Edit Product";
}

<form asp-action="Edit" asp-route-productId ="@Model.MatrattId" method="post">
    <div class="form-group">
        <label asp-for="MatrattNamn"></label>
        <input asp-for="MatrattNamn" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Beskrivning"></label>
        <textarea asp-for="Beskrivning" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="MatrattTyp"></label>
        <input asp-for="MatrattTyp" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Pris"></label>
        <input asp-for="Pris" class="form-control"/>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
